<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">

    <LinearLayout
            android:id="@+id/content_header"
            android:background="@color/design_default_color_primary"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
    >
        <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_width="2dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:id="@+id/img_item_photo"
                tools:scr="@tools/sample/avatars"
        />
    </LinearLayout>
    <TextView
            android:layout_marginHorizontal="16dp"
            android:id="@+id/name_user"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mahmud"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/content_header"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/name_user"
            app:layout_constraintStart_toStartOf="@+id/name_user"
            android:id="@+id/user_info"
            android:layout_marginTop="16dp"
    >
        <info.androidhive.fontawesome.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:solid_icon="true"
                android:text="@string/fa_map"
        />
        <TextView
                android:id="@+id/user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Palembang"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:textSize="14dp"
        />
    </LinearLayout>


    <info.androidhive.fontawesome.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:solid_icon="true"
            android:layout_marginTop="16dp"
            android:text="@string/fa_user_friends_solid"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4" android:id="@+id/fontTextView2"
    />
    <info.androidhive.fontawesome.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:solid_icon="true"
            android:layout_marginTop="16dp"
            android:text="@string/fa_user_check_solid"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:id="@+id/fontTextView"
    />
    <TextView
            android:id="@+id/follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="202"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/fontTextView2"
            app:layout_constraintTop_toTopOf="@+id/fontTextView2"
            android:layout_marginStart="12dp"/>
    <TextView
            android:id="@+id/following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="202"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/fontTextView"
            android:layout_marginStart="12dp" app:layout_constraintTop_toTopOf="@+id/fontTextView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Followers"
            android:text="Followers"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginStart="60dp"
            android:id="@+id/textView4"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Following"
            android:text="Followers"
            android:textSize="14dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/user_info" app:layout_constraintStart_toStartOf="@+id/user_info"
            android:layout_marginTop="16dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textSize="14dp"
            android:id="@+id/companyName"
            app:layout_constraintTop_toTopOf="@+id/repositoryName"
            app:layout_constraintStart_toStartOf="@+id/fontTextView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repository"
            android:textSize="14dp"
            android:layout_marginTop="16dp"
            android:id="@+id/repositoryName"
            app:layout_constraintTop_toBottomOf="@+id/following"
            app:layout_constraintStart_toStartOf="@+id/fontTextView"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="102"
            android:textSize="14dp"
            android:layout_marginTop="13dp"
            android:id="@+id/repositoryvalue"
            app:layout_constraintTop_toBottomOf="@+id/repositoryName"
            app:layout_constraintStart_toStartOf="@+id/repositoryName"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Google"
            android:textSize="14dp"
            android:id="@+id/companyValue"
            app:layout_constraintTop_toTopOf="@+id/repositoryvalue"
            app:layout_constraintStart_toStartOf="@+id/companyName"
    />
</androidx.constraintlayout.widget.ConstraintLayout>